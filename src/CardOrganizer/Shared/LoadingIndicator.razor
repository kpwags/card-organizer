<div hidden="@(IsLoading == false)" class="flex justify-center mt-16">
    <div class="loading-indicator"><div></div><div></div><div></div><div></div></div>
</div>

<div hidden="@(IsLoading == false)" class="flex justify-center mb-16">
    @if (Tip != string.Empty)
    {
        <div class="text-lg">@Tip</div>
    }
</div>

@code {
    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public string Tip { get; set; } = string.Empty;
}